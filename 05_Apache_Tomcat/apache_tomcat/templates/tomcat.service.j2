[Unit]
Description=Tomcat Server
After=syslog.target network.target

[Service]
Type=forking
User={{ users.tomcat_user }}
Group={{ users.tomcat_user }}
Environment=JAVA_HOME=/usr/lib/jvm/jre
Environment=CATALINA_HOME={{ tomcat_file }}
Environment=CATALINA_BASE={{ tomcat_file }}
ExecStart={{ tomcat_file }}/bin/catalina.sh start
ExecStop={{ tomcat_file }}/bin/catalina.sh stop

[Install]
WantedBy=multi-user.target