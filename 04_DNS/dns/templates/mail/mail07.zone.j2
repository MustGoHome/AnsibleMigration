$TTL 86400
@       IN SOA  ns1.{{ mail07_domain }}. root.com. (
                                        10      ; serial
                                        1D      ; refresh
                                        1H      ; retry
                                        1W      ; expire
                                        3H )    ; minimum
;; DNS Server
{{ mail07_domain }}.             IN  NS      ns1.{{ mail07_domain }}.
ns1.{{ mail07_domain }}.         IN  A       {{ dns_server }}

;; Mail Server
{{ mail07_domain }}.             IN  MX 10   mail.{{ mail07_domain }}.
mail                             IN  A       {{ mail07_server }}
